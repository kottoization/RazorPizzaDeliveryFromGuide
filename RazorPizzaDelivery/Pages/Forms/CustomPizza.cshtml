@page
@model RazorPizzaDelivery.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create your own pizza!</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name"/> <br/>
        <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce"/> Tomato Sauce <br/>
        <input type="checkbox" asp-for="Pizza.GarlicSauce" placeholder="Garlic Sauce"/> Garlic Sauce <br/>
        <input type="checkbox" asp-for="Pizza.Peperoni" placeholder="Peperoni"/> Peperoni <br/>
        <input type="checkbox" asp-for="Pizza.Chicken" placeholder="Chicken" /> Chicken <br/>
        <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mashrooms" /> Mushrooms <br/>
        <input type="checkbox" asp-for="Pizza.Jalapeno" placeholder="Jalapeno"/> Jalapeno <br/>
        <input type="checkbox" asp-for="Pizza.Corn" placeholder="Corn"/> Corn <br/>
        <input type="checkbox" asp-for="Pizza.Bacon" placeholder="Bacon"/> Bacon <br/>
        <input type="checkbox" asp-for="Pizza.Onion" placeholder="Onion"/> Onion <br/>
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>
